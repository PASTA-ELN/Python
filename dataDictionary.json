{
  "_id": "-dataDictionary-",
  "-hierarchy-":["project","step","task"],
  "-names-":{
    "main":["name","tags","comments"],
    "database":["_id","_rev","type","hierarchy","user","client","revisions"],
    "special":["image","metaUser","metaVendor","shasum","qrCode"]
  },


  "project": {
    "config":["Projects"],
    "default":[
      {"name":"name",     "long":"What is the project's name?", "length":25},
      {"name":"status",   "long":"What is the project status",  "list":["active","paused","passive"], "length":7},
      {"name":"objective","long":"What is the objective?",      "length":51},
      {"name":"tags",     "long":"",                            "length":25},
      {"name":"comment",  "long":"#tags comments :field:value:","length":0}
      ]
    },
  "step": {
    "config":[],
    "default":[
      {"name":"name",     "long":"What is the name of step?"},
      {"name":"comment",  "long":"#tags comments :field:value:"}
      ]
    },
  "task": {
    "config":[],
    "default":[
      {"name":"name",     "long":"What is the name of task?"},
      {"name":"comment",  "long":"#tags comments :field:value:"},
      {"name":"procedure","long":"Which procedure to use"}
      ]
    },


  "measurement": {
    "config":["Measurements"],
    "default":[
      {"name":"name",           "long":"What is the file name?",      "length":25},
      {"name":"tags",           "long":"",                            "length":15},
      {"name":"comment",        "long":"#tags comments :field:value:","length":25},
      {"name":"type",           "long":"Measurement type",            "length":34},
      {"name":"image",          "long":"",                            "length":-5}
      ]
    },


  "sample": {
    "config":["Samples"],
    "default":[
      {"name":"name",     "long":"What is the name of the sample?",  "length":25},
      {"name":"chemistry","long":"What is its chemical composition?","length":25},
      {"name":"tags",     "long":"",                                 "length":25},
      {"name":"comment",  "long":"#tags comments :field:value:",     "length":25},
      {"name":"qrCode",   "long":"What is its QR-code?",             "length":-5}
      ]
    },

  "procedure": {
    "config":["Procedures"],
    "default":[
      {"name":"name",   "long":"What is the name / path?",                 "length":25},
      {"name":"tags",   "long":"",                                         "length":25},
      {"name":"comment","long":"#tags comments :field:value: e.g. #SOP_v1","length":25},
      {"name":"content","long":"What are the steps (autofilled if file given)?","length":0}
      ]
    }


}
